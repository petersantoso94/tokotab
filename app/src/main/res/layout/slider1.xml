<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_stationery"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/logo_stationery" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_below="@id/logo_stationery"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/font_34sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textColor="@color/dot_light_screen"
            android:text="@string/slide_1_title"></TextView>

        <TextView
            android:padding="16dp"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/font_16sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textColor="@color/dot_light_screen"
            android:text="@string/slide_1_desc" />

    </RelativeLayout>

</LinearLayout>